@model BandTheBirdProj.Models.BandingData

@{
    ViewData["Title"] = "CreateBird";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <body style="background-color: lightgray">
        <h1 style="text-align: center; color: black; padding-top: 10px">Banding Data</h1>
        <div>
            <a asp-action="Index">Banding Home</a>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateBird">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BandNumber" class="control-label"></label>
                        <input asp-for="BandNumber" class="form-control" />
                        <span asp-validation-for="BandNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CaptureDate" class="control-label"></label>
                        <input asp-for="CaptureDate" class="form-control" />
                        <span asp-validation-for="CaptureDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BanderIntials" class="control-label"></label>
                        <input asp-for="BanderIntials" class="form-control" />
                        <span asp-validation-for="BanderIntials" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CaptureTime" class="control-label"></label>
                        <input asp-for="CaptureTime" class="form-control" />
                        <span asp-validation-for="CaptureTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NetNumber" class="control-label"></label>
                        <input asp-for="NetNumber" class="form-control" />
                        <span asp-validation-for="NetNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BandType" class="control-label"></label>
                        @Html.DropDownList("BandType", (SelectList)ViewBag.Type, "Please select", new { @class = "form-control" })
                        <span asp-validation-for="BandType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BandSize" class="control-label"></label>
                        @Html.DropDownList("BandSize", (SelectList)ViewBag.Size, "Please select", new { @class = "form-control" })
                        <span asp-validation-for="BandSize" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AlphaCode" class="control-label"></label>
                        @Html.DropDownList("AlphaCode", (SelectList)ViewBag.Species, "Please select", new { @class = "form-control" })
                        <span asp-validation-for="AlphaCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SpeciesName" class="control-label"></label>
                        @Html.DropDownList("SpeciesName", (SelectList)ViewBag.Names, "Please select", new { @class = "form-control" })                       
                        <span asp-validation-for="SpeciesName" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for-"IdentityUserId" />
                    <div class="form-group">
                        <label asp-for="SiteId" class="control-label"></label>
                        @Html.DropDownList("SiteId", (SelectList)ViewBag.Sites, "Please select", new { @class = "form-control" })
                        <span asp-validation-for="SiteId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for-"SiteName" />
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-6">
                <div style="text-align: left">
                    <img src="~/SiteImages/chickadee.jpg" width="600" height="800" />
                </div>

            </div>
        </div>
